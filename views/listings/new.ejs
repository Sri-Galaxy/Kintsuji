<% layout("layouts/default") %>

    <h1 class="mt-2">Create New Listing</h1>
    <hr><br>
    <div class="row">
        <form method="post" action="/Listings" novalidate class="mb-4 needs-validation" enctype="multipart/form-data">
            <div class="col-8 offset-1">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" placeholder="Enter a title" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Title Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Title should not be empty. Please provide a title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description (max. 225 characters):</label>
                    <textarea id="description" placeholder="Write something about it..." name="description" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Description is fine..!
                    </div>
                    <div class="invalid-feedback">
                        Description should not be empty. Please provide a description.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image:</label>
                    <input type="file" id="image" name="image" class="form-control" required>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" placeholder="Ex- Hyderabad" id="location" name="location" class="form-control" required>
                        <div class="invalid-feedback">
                            Location should be valid or not be Empty.
                        </div>
                    </div>


                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" placeholder="Ex- India" id="country" name="country" class="form-control" required>
                        <div class="invalid-feedback">
                            Country should be valid or not be Empty.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Category:</label>
                    <select id="category" name="category" class="form-control" required>
                        <option value="">Select a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Cities">Cities</option>
                        <option value="Beach">Beach</option>
                        <option value="Camping">Camping</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Farm">Farm</option>
                        <option value="Castles">Castles</option>
                        <option value="Boats">Boats</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a category.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" placeholder="Ex- 700" id="price" name="price" class="form-control" required>
                    <div class="invalid-feedback">
                        Price should not be Empty.
                    </div>
                </div>

                <button type="submit" class="btn btn-danger">Create Listing</button>
            </div>
        </form>
    </div>