<% layout('layouts/default') %>
<h1 class="mt-2">Sign Up</h1>
<div class="row">
    <div class="col-6 offset-1 mt-2">
        <form action="/signup" method="post" novalidate class="mb-4 needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username" name="username" placeholder="Enter a username" class="form-control" required>
                <div class="valid-feedback">
                    Username Looks Good!
                </div>
                <div class="invalid-feedback">
                    Username should not be empty. Please provide a username.
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" class="form-control" required>
                <div class="valid-feedback">
                    Email Looks Good!
                </div>
                <div class="invalid-feedback">
                    Email should not be empty. Please provide a valid email address.
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" class="form-control" required>
                <div class="valid-feedback">
                    Password Looks Good!
                </div>
                <div class="invalid-feedback">
                    Password should not be empty. Please provide a password.
                </div>
            </div>

            <button type="submit" class="btn btn-danger">Sign Up</button>
        </form>
    </div>
</div>